{
  "name": "badminton-live-monitor",
  "version": "1.0.0",
  "description": "Application de surveillance en direct pour les cours de badminton",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "build:prod": "npm run install-all && npm run build && NODE_ENV=production",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["badminton", "eps", "education", "realtime", "monitoring"],
  "author": "Professeur EPS",
  "license": "MIT"
}

